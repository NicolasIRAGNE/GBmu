{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch sava",
            "type": "cppdbg",
            "request": "launch",
            // Resolved by CMake Tools:
            "program": "${workspaceFolder}/build/gbmu",
            "args": ["${workspaceFolder}/rom/Legend_of_Zelda_link_Awaking.gb"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}